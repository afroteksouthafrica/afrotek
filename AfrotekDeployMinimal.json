{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EcrPushPullSpecificRepos",
      "Effect": "Allow",
      "Action": [
        "ecr:GetAuthorizationToken",
        "ecr:BatchCheckLayerAvailability",
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:PutImage",
        "ecr:InitiateLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:CompleteLayerUpload"
      ],
      "Resource": [
        "arn:aws:ecr:af-south-1:166023635884:repository/afrotek/product-service",
        "arn:aws:ecr:af-south-1:166023635884:repository/afrotek/auth",
        "arn:aws:ecr:af-south-1:166023635884:repository/afrotek-product-service"
      ]
    },
    {
      "Sid": "EcsUpdateOnlyStaging",
      "Effect": "Allow",
      "Action": [
        "ecs:RegisterTaskDefinition",
        "ecs:UpdateService",
        "ecs:DescribeServices",
        "ecs:DescribeTaskDefinition",
        "ecs:ListTasks",
        "ecs:DescribeTasks"
      ],
      "Resource": [
        "arn:aws:ecs:af-south-1:166023635884:cluster/afrotek-staging-cluster",
        "arn:aws:ecs:af-south-1:166023635884:service/afrotek-staging-cluster/afrotek-staging-product-service",
        "arn:aws:ecs:af-south-1:166023635884:service/afrotek-staging-cluster/afrotek-staging-auth-service",
        "arn:aws:ecs:af-south-1:166023635884:task-definition/afrotek-product-task:*",
        "arn:aws:ecs:af-south-1:166023635884:task-definition/afrotek-auth-task:*"
      ]
    },
    {
      "Sid": "AllowPassTaskExecutionRole",
      "Effect": "Allow",
      "Action": ["iam:PassRole"],
      "Resource": ["arn:aws:iam::166023635884:role/afrotek-ecs-task-exec-role"]
    },
    {
      "Sid": "CloudWatchLogsForEcs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:DescribeLogStreams"
      ],
      "Resource": [
        "arn:aws:logs:af-south-1:166023635884:log-group:/ecs/*",
        "arn:aws:logs:af-south-1:166023635884:log-group:/ecs/*:log-stream:*"
      ]
    },
    {
      "Sid": "IdentityCheck",
      "Effect": "Allow",
      "Action": ["sts:GetCallerIdentity"],
      "Resource": "*"
    }
  ]
}
