{
  "family": "afrotek-staging-product-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::166023635884:role/afrotek-staging-ecs-exec",
  "taskRoleArn": "arn:aws:iam::166023635884:role/afrotek-staging-ecs-task",
  "containerDefinitions": [
    {
      "name": "product-service",
      "image": "166023635884.dkr.ecr.af-south-1.amazonaws.com/afrotek-product-service:d77b82e",
      "cpu": 0,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3002,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "AWS_REGION", "value": "af-south-1" },
        { "name": "PORT", "value": "3002" },
        { "name": "AWS_S3_BUCKET", "value": "afrotek-product-images" },
        { "name": "DB_PORT", "value": "5432" },
        { "name": "DB_PASS", "value": "Tebatso@2802" },
        { "name": "JWT_SECRET", "value": "supersecretkey" },
        { "name": "DB_USER", "value": "afrotek_admin" },
        { "name": "NODE_ENV", "value": "staging" },
        { "name": "DB_NAME", "value": "afrotek_staging" },
        { "name": "DB_HOST", "value": "afrotek-staging-db.csc8cbctmzu0.af-south-1.rds.amazonaws.com" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/afrotek-product-service",
          "awslogs-region": "af-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
